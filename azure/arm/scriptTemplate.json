{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VmName": {
            "type": "string"
        },
        "Location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "script": {
            "type": "string"
        },
        "Version": {
            "type": "string"
        },
        "Password": {
            "type": "securestring"
        },
        "sslCert": {
            "type": "string"
        },
        "sslKey": {
            "type": "securestring"
        },
        "httpPort": {
            "type": "string"
        },
        "httpsPort": {
            "type": "string"
        },
        "boltPort": {
            "type": "string"
        },
        "CoordPort": {
            "type": "string"
        },
        "DataPort": {
            "type": "string"
        },
        "myId": {
            "type": "string"
        },
        "myIp": {
            "type": "string"
        },
        "allIps": {
            "type": "string"
        },
        "httpLogging": {
            "type": "string",
            "defaultValue": "false"
        },
        "JoinTimeout": {
            "type": "string",
            "defaultValue": "5m"
        },
        "Neo4JTags": {
            "type": "object",
            "metadata": {
                "description": "Dictionary of tags to apply to the various resources"
            }
        },
        "ArtifactsBase": {
            "type": "string",
            "metadata": {
                "artifactsBaseUrl": "",
                "description": "base URL at which Marketplace package files are stored. Value adjusted automatically during Marketplace submission process."
            },
            "defaultValue": "https://s3.amazonaws.com/neo4j-arm/test"
        }
    },
    "variables": {
        "artifactsBase": "[concat(parameters('ArtifactsBase'),'/')]",
        "sq": "'"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('VmName'),'/SetupScript')]",
            "apiVersion": "2017-03-30",
            "location": "[parameters('Location')]",
            "tags": "[parameters('Neo4JTags')]",
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[concat(variables('artifactsBase'), 'post-deploy.sh')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('/usr/bin/env NEO4J_VERSION=\"',parameters('Version'),'\" NEO4J_PASSWORD=\"',parameters('Password'),'\" SSL_CERT=\"',parameters('sslCert'),'\" SSL_KEY=\"',parameters('sslKey'),'\" HTTP_PORT=\"',parameters('httpPort'),'\" HTTPS_PORT=\"',parameters('httpsPort'),'\" HTTP_LOGGING=\"',parameters('httpLogging'),'\" BOLT_PORT=\"',parameters('boltPort'),'\" COORD_PORT=\"',parameters('CoordPort'),'\" DATA_PORT=\"',parameters('DataPort'),'\" JOIN_TIMEOUT=\"',parameters('JoinTimeout'),'\" MY_ID=\"',parameters('myId'),'\" MY_IP=\"',parameters('myIp'),'\" HOST_IPS=',variables('sq'),parameters('allIps'),variables('sq'),' ./post-deploy.sh')]"
                }
            }
        }
    ]
}
